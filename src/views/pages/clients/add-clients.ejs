<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 card border-warning shadow-sm mb-4 p-3 form-bg">
      <h2 class="text-center">Add New Client</h2>

      <% if (messages.error_msg) { %>
        <div class="alert alert-danger flash-msg"><%= messages.error_msg %></div>
      <% } %>

      <% if (messages.success_msg) { %>
        <div class="alert alert-success flash-msg"><%= messages.success_msg %></div>
      <% } %>

      <% if (errors && errors.length> 0) { %>
        <div class="alert alert-danger show">
          <ul>
            <% errors.forEach(error=> { %>
              <li>
                <%= error.msg %>
              </li>
              <% }) %>
          </ul>
        </div>
        <% } %>

      <form action="/clients/add" method="POST">
        <div class="mb-3">
          <label for="first_name" class="form-label">First Name</label>
          <input type="text"
            class="form-control <%= errors.find(e => e.param === 'first_name') ? 'is-invalid' : '' %>"
            id="first_name" name="first_name" value="<%= oldData.first_name || '' %>">
          <% const firstNameErr=errors.find(e=> e.param === 'first_name'); %>
            <% if (firstNameErr) { %>
              <div class="invalid-feedback">
                <%= firstNameErr.msg %>
              </div>
              <% } %>
        </div>
      
        <div class="mb-3">
          <label for="last_name" class="form-label">Last Name</label>
          <input type="text"
            class="form-control <%= errors.find(e => e.param === 'last_name') ? 'is-invalid' : '' %>"
            id="last_name" name="last_name" value="<%= oldData.last_name || '' %>">
          <% const lastNameErr=errors.find(e=> e.param === 'last_name'); %>
            <% if (lastNameErr) { %>
              <div class="invalid-feedback">
                <%= lastNameErr.msg %>
              </div>
              <% } %>
        </div>
      
        <div class="mb-3">
          <label for="phone_number" class="form-label">Phone Number</label>
          <input type="tel"
            class="form-control <%= errors.find(e => e.param === 'phone_number') ? 'is-invalid' : '' %>"
            id="phone_number" name="phone_number"
            value="<%= oldData.phone_number || '' %>">
          <% const phoneErr=errors.find(e=> e.param === 'phone_number'); %>
            <% if (phoneErr) { %>
              <div class="invalid-feedback">
                <%= phoneErr.msg %>
              </div>
              <% } %>
        </div>
      
        <div class="mb-3">
          <label for="hired_date" class="form-label">Hired Date</label>
          <input type="date"
            class="form-control <%= errors.find(e => e.param === 'hired_date') ? 'is-invalid' : '' %>"
            id="hired_date" name="hired_date" value="<%= oldData.hired_date || '' %>">
          <% const hiredDateErr=errors.find(e=> e.param === 'hired_date'); %>
            <% if (hiredDateErr) { %>
              <div class="invalid-feedback">
                <%= hiredDateErr.msg %>
              </div>
              <% } %>
        </div>
      
        <div class="mb-3">
          <label for="service_hours" class="form-label">Service Hours</label>
          <input type="number" step="0.25"
            class="form-control <%= errors.find(e => e.param === 'service_hours') ? 'is-invalid' : '' %>"
            id="service_hours" name="service_hours"
            value="<%= oldData.service_hours || '' %>">
          <% const hoursErr=errors.find(e=> e.param === 'service_hours'); %>
            <% if (hoursErr) { %>
              <div class="invalid-feedback">
                <%= hoursErr.msg %>
              </div>
              <% } %>
        </div>
      
        <div class="mb-3">
          <label for="preferred_day" class="form-label">Preferred Day</label>
          <select
            class="form-select <%= errors.find(e => e.param === 'preferred_day') ? 'is-invalid' : '' %>"
            id="preferred_day" name="preferred_day">
            <option value="M" <%=oldData.preferred_day==='M' ? 'selected' : '' %>
              >Monday</option>
            <option value="TUE" <%=oldData.preferred_day==='TUE' ? 'selected' : '' %>
              >Tuesday</option>
            <option value="W" <%=oldData.preferred_day==='W' ? 'selected' : '' %>
              >Wednesday</option>
            <option value="TH" <%=oldData.preferred_day==='TH' ? 'selected' : '' %>
              >Thursday</option>
            <option value="F" <%=oldData.preferred_day==='F' ? 'selected' : '' %>
              >Friday</option>
            <option value="NOTSET" <%=oldData.preferred_day==='NOTSET' ? 'selected'
              : '' %>>Not Set</option>
          </select>
          <% const dayErr=errors.find(e=> e.param === 'preferred_day'); %>
            <% if (dayErr) { %>
              <div class="invalid-feedback">
                <%= dayErr.msg %>
              </div>
              <% } %>
        </div>
      
        <div class="mb-3">
          <label for="service_type_id" class="form-label">Service Type</label>
          <select name="service_type_id" id="service_type_id"
            class="form-control <%= errors.find(e => e.param === 'service_type_id') ? 'is-invalid' : '' %>">
            <option value="">-- Select a service type --</option>
            <% serviceTypes.forEach(type=> { %>
              <option value="<%= type.service_id %>"
                <%=oldData.service_type_id==type.service_id ? 'selected' : '' %>>
                <%= type.service_frequency %>
              </option>
              <% }) %>
          </select>
          <% const typeErr=errors.find(e=> e.param === 'service_type_id'); %>
            <% if (typeErr) { %>
              <div class="invalid-feedback">
                <%= typeErr.msg %>
              </div>
              <% } %>
        </div>
      
        <div class="mb-3">
          <label for="is_active" class="form-label">Status</label>
          <select
            class="form-select <%= errors.find(e => e.param === 'is_active') ? 'is-invalid' : '' %>"
            id="is_active" name="is_active">
            <option value="active" <%=oldData.is_active==='active' ? 'selected' : ''
              %>>Active</option>
            <option value="inactive" <%=oldData.is_active==='inactive' ? 'selected'
              : '' %>>Inactive</option>
          </select>
          <% const statusErr=errors.find(e=> e.param === 'is_active'); %>
            <% if (statusErr) { %>
              <div class="invalid-feedback">
                <%= statusErr.msg %>
              </div>
              <% } %>
        </div>
      
        <button type="submit" class="btn btn-warning w-100 mt-2">Add Client</button>
      </form>

    </div>
  </div>
</div>

