
<div class="card mb-3 mx-auto p-3 mt-2" style="max-width: 440px;">
    <div class="row g-0">
        <div class="col-mx-4">
            <img src="/images/bee.webp"
                class="img-fluid rounded-start"
                alt="Bee on a broomstick">
        </div>
        <div class="col-md-15">
            <div class="card-body text-bg-dark p-3">
                <h5 class="card-title">Welcome to ZCleaning!</h5>
                <% if (!user) { %>
                    <p>Please log in to manage your account.</p>
                    <% } %>
                <p class="card-text">
                    <% if (!user) { %>
                        <a href="/auth/google"
                            class="btn btn-outline-warning d-flex align-items-center gap-3">
                            <i class="bi bi-google"></i>
                            Sign in with Google
                        </a>
                        <% } else { %>
                            <div
                                class="d-flex flex-column align-items-start">
                                <p class="mb-2">You're logged in as 
                                    <strong>
                                        <%= user?.account_firstname %>
                                            <%= user?.account_lastname %>
                                    </strong>
                                </p>
                                <a href="/auth/logout" class="btn btn-outline-danger d-flex align-items-center">Logout</a>
                            </div>
                    <% } %>
                </p>
            </div>
        </div>
    </div>
</div>