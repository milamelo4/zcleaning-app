<div class="no-print">
  <nav class="navbar bg-light px-4 py-2">
      <div class="container-fluid d-flex flex-wrap align-items-center justify-content-between p-2">
  
        <!-- Left spacer (keeps center from shifting) -->
        <div class="d-none d-md-block" style="width: 150px;"></div>
  
        <!-- Centered nav links -->
        <div class="d-flex justify-content-center flex-grow-1 gap-3">
          <a class="nav-link text-primary" href="/">Home</a>
          <a class="nav-link text-primary" href="/about">About Us</a>
          <% if (typeof user !== 'undefined' && user.account_type === 'admin') { %>
            <a class="nav-link text-primary" href="/dashboard">Dashboard</a>
          <% } %>
        </div>
  
        <!-- Right-aligned user info -->
        <% if (typeof user !=='undefined' ) { %>
          <div class="dropdown">
            <button class="btn btn-light dropdown-toggle d-flex align-items-center"
              type="button" id="accountDropdown" data-bs-toggle="dropdown"
              aria-expanded="false">
              <i class="bi bi-person-circle me-2"></i>
              Hi, <%= user.account_firstname %>
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow"
              aria-labelledby="accountDropdown">
              <li><a class="dropdown-item" href="/profile">Profile</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
            </ul>
          </div>
          <% } %>
        
  
      </div>
    </nav>
  
</div>