<div class="d-flex min-vh-100">
    <%- include("../../partials/sidebar") %>
  
    <div class="flex-grow-1 p-4">
      <h1><%= title %> 
        <span class="float-end">
          <button class="btn btn-outline-secondary mb-3" onclick="window.print()">Print</button>
        </span>
      </h1>
  
      <% if (appointments && appointments.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-bordered table-striped align-middle">
            <thead class="table-primary">
              <tr>
                <th>Date</th>
                <th>Client</th>
                <th>Service Type</th>
                <th>Duration (hrs)</th>
                <th>Price</th>
                <th>Notes</th>
              </tr>
            </thead>
            <tbody>
              <% appointments.forEach(app => { %>
                <tr>
                  <td><%= new Date(app.appointment_date).toLocaleDateString() %></td>
                  <td><%= app.first_name %> <%= app.last_name %></td>
                  <td><%= app.service_frequency %></td>
                  <td><%= app.duration_hours %></td>
                  <td>$<%= app.price ? Number(app.price).toFixed(2) : "0.00" %></td>
                  <td><%= app.notes || "—" %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p>No upcoming appointments scheduled.</p>
      <% } %>
  
      <a href="/dashboard" class="btn btn-outline-secondary mt-4">← Back to Dashboard</a>
    </div>
  </div>
  