<div class="container mt-5">
    <div class="card shadow border border-warning"
        style="max-width: 600px; margin: 0 auto;">
        <div
            class="card-body d-flex flex-column flex-md-row align-items-center gap-4 bg-custom gold rounded-3">

            <!-- Profile Image or Fallback -->
            <% if (user.profile_image_url) { %>
                <img src="<%= user.profile_image_url %>" alt="Profile photo"
                    class="rounded-circle shadow"
                    style="width: 100px; height: 100px; object-fit: cover;">
                <% } else { %>
                    <i class="bi bi-person-circle fs-1 text-secondary"></i>
                    <% } %>

            <!-- User Info -->
            <div>
                <h4 class="mb-1">
                    <%= user.account_firstname %>
                        <%= user.account_lastname %>
                </h4>
                <p class="mb-1 text-muted"><i
                        class="bi bi-envelope me-1"></i>
                    <%= user.account_email %>
                </p>
                <span
                    class="badge bg-info text-dark text-uppercase">
                    <%= user.account_type %>
                </span>
            </div>
        </div>
    </div>

    <div class="mt-5 text-center text-muted">
        <p>More features coming soon â€” like your upcoming schedule or assigned
            clients!</p>
    </div>
</div>
  