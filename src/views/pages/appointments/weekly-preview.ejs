<div class="d-flex min-vh-100">
    <%- include("../../partials/sidebar") %>

        <div class="flex-grow-1 p-4">
            <h1>
                <%= title %>
            </h1>
            <p class="text-muted mb-4">Week starting on <strong>
                    <%= weekStartDate %>
                </strong></p>

            <% if (appointments.length===0) { %>
                <div class="alert alert-info">No suggested appointments for this
                    week.</div>
                <% } else { %>
                    <div class="table-responsive">
                        <table
                            class="table table-bordered table-striped align-middle">
                            <thead class="table-primary">
                                <tr>
                                    <th>Date</th>
                                    <th>Weekday</th>
                                    <th>Client</th>
                                    <th>Service Type ID</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% appointments.forEach(app=> { %>
                                    <tr>
                                        <td>
                                            <%= app.appointment_date %>
                                        </td>
                                        <td>
                                            <%= app.weekday %>
                                        </td>
                                        <td>
                                            <%= app.first_name %>
                                                <%= app.last_name %>
                                        </td>
                                        <td>
                                            <%= app.service_type_id %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } %>

                        <a href="/dashboard"
                            class="btn btn-outline-secondary mt-4">‚Üê Back to
                            Dashboard</a>
        </div>
</div>
  