<div class="d-flex">
    <%- include("../partials/sidebar") %>

    <div class="flex-grow-1 p-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Welcome, <%= user?.account_firstname || 'User' %>!</h1>
        </div>

        <div class="row">                       
            <div class="col-md-4 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Clients</h5>
                        <p class="card-text">Manage client information</p>
                        <a href="/clients" class="btn btn-warning">View Clients</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card border-primary">
                    <div class="card-body">
                        <h5 class="card-title">Appointments</h5>
                        <p class="card-text">View and schedule cleanings</p>
                        <a href="/appointments"
                            class="btn btn-primary">Schedule</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card border-success">
                    <div class="card-body">
                        <h5 class="card-title">Payments</h5>
                        <p class="card-text">Track and update payments</p>
                        <a href="/clients/missing-payments" class="btn btn-success">View
                            Payments</a>
                    </div>
                </div>
            </div>

            <h2 class="text-center mt-5">App Statistics</h2>
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 justify-content-center">
                <div class="col">
                    <div class="card h-100 text-center shadow">
                        <div class="card-body p-3">
                            <div class="display-6 text-info mb-2">
                                <i class="bi bi-people fs-2 text-info mb-3"></i>
                            </div>
                            <h2 class="card-title mb-3"><%= totalClients %></h2>
                            <p class="card-text text-muted">Active Clients</p>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100 text-center shadow">
                        <div class="card- body p-3">
                            <div class="display-6 text-success mb-2">
                                <i class="bi bi-graph-up fs-2 mb-3 text-success"></i>
                            </div>
                            <h2 class="card-title mb-3">56%</h2>
                            <p class="card-text text-muted">Growth Rate</p>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100 text-center shadow">
                        <div class="card- body p-3">
                            <div class="display-6 text-warning mb-2">
                                <i class="bi bi-star fs-2 mb-3 text-warning"></i>
                            </div>
                            <h2 class="card-title mb-3">4.8</h2>
                            <p class="card-text text-muted">Average Rating</p>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card h-100 text-center shadow">
                        <div class="card-body p-3">
                            <div class="display-6 text-danger mb-2">
                                <i class="bi bi-clock-history fs-2 mb-3 text-danger"></i>
                            </div>
                            <h2 class="card-title mb-3">98.3%</h2>
                            <p class="card-text text-muted">Uptime</p>
                        </div>
                    </div>
                </div>            
            </div>
        </div>
    </div>
</div>

